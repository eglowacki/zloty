{
	"Configuration" : {
		"Debug": {
			"Logging": {
				"Filters": [ "MULT", "POOL", "SQL", "FILE", "VTS", "IDS", "INPT", "INIT", "SPAM", "APP", "DIRE" ],
				"Level": "DBUG",
				"Outputs": {
					"ylog::OutputDebug": {
						"split_lines": "true"
					},
					"ylog::OutputFile": {
						"max_startup_size": "0",
						"filename": "$(LogFolder)/$(AppName).log"
					}
				}
			}
		},

		"Init": {
			"GameDirectorScript": "Settings@Director",
			"Aliases": {
				"$(AssetsFolder)": {
					"Path": "$(UserDataFolder)/Assets",
					"ReadOnly": true
				},
				"$(DatabaseFolder)": {
					"Path": "$(UserDataFolder)/Database",
					"ReadOnly": true
				}
			},
			"VTS": [
				{
					"Settings": {
						"Converters": "JSON",
						"Filters": [ "*.json" ],
						"Path": [ "$(DataFolder)/Data", "$(AppFolder)" ],
						"ReadOnly": true,
						"Recursive": false
					}
				}
			]
		}
	}
}
